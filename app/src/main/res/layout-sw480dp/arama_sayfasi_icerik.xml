<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/searchContentToolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_size"
        android:background="@drawable/content_level_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/search_content_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/search_content_level_one_back_icon" />

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView_page"
            android:layout_width="@dimen/search_bar_background_width"
            android:layout_height="@dimen/search_bar_height"
            android:layout_marginStart="50dp"
            android:background="@drawable/input_field" />

    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:id="@+id/searchPageListView"
        android:layout_width="409dp"
        android:layout_height="661dp"
        android:divider="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchContentToolbar"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
