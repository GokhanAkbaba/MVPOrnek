    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:ignore="MissingDefaultResource"
    tools:context=".Activity.Ayarlar.BildirimlerAnlikBildirimActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bildirimDuzenleAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/bildirimIlgiAlaniGeriBtn"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/ripple_back_button"
            android:clickable="true"
            android:drawableStart="@mipmap/ayarlar_geri_donus"
            android:drawableTint="@color/uygulamaMavisi"
            android:focusable="true"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="18dp"
            android:textAppearance="@style/customfontstyle"
            android:text="@string/bildirimIlgiAlanlariTxt"
            android:layout_toEndOf="@+id/bildirimIlgiAlaniGeriBtn"
            android:textColor="@color/uygulamaMavisi"
            android:layout_marginBottom="15dp"
            android:textSize="21sp" />
        <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView4"
            android:background="@color/ayarlarGrisi" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/bildirimDuzenleAppBar">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            tools:ignore="MissingConstraints,UselessParent">

            <RelativeLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/searchContentAppbar"
                tools:ignore="MissingConstraints">
                <RelativeLayout
                    android:id="@+id/relativeLayoutAdres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/adresText"/>
                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
                        android:theme="@style/SCBSwitch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textView1"/>
                    <View
                        android:id="@+id/divider4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textView1"
                        android:background="@color/ayarlarGrisi" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayoutYemek"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutAdres"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textViewYemek"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/yemekText"/>
                    <Switch
                        android:id="@+id/switchYemek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
                        android:theme="@style/SCBSwitch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textViewYemek"/>
                    <View
                        android:id="@+id/dividerYemek"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textViewYemek"
                        android:background="@color/ayarlarGrisi" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayoutSpor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutYemek"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textViewSpor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/sporText"/>
                    <Switch
                        android:id="@+id/switchSpor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
                        android:theme="@style/SCBSwitch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textViewSpor"/>
                    <View
                        android:id="@+id/dividerSpor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textViewSpor"
                        android:background="@color/ayarlarGrisi" />
                </RelativeLayout>
                <RelativeLayout
