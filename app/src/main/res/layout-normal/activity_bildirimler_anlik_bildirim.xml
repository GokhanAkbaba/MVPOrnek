                    <View
                        android:id="@+id/dividerYazilim"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textViewYazilim"
                        android:background="@color/ayarlarGrisi" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayoutOto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutYazilim"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textViewOto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
