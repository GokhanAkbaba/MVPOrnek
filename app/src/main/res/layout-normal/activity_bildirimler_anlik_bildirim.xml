                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/tatilText"/>
                    <Switch
                        android:id="@+id/switchTatil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
                        android:theme="@style/SCBSwitch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textViewTatil"/>
                    <View
                        android:id="@+id/dividerTatil"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textViewTatil"
                        android:background="@color/ayarlarGrisi" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayoutAlisveris"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutTatil"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textViewAlisveris"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/alisverisText"/>
                    <Switch
                        android:id="@+id/switchAlisveris"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
