                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutSanat"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textViewYazilim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/yazilimText"/>
                    <Switch
                        android:id="@+id/switchYazilim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
