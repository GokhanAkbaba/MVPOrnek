                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/otoText"/>
                    <Switch
                        android:id="@+id/switchOto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
                        android:theme="@style/SCBSwitch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textViewOto"/>
                    <View
                        android:id="@+id/dividerOto"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textViewOto"
                        android:background="@color/ayarlarGrisi" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayoutModa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutOto"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textViewModa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/modaText"/>
                    <Switch
                        android:id="@+id/switchModa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
                        android:theme="@style/SCBSwitch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textViewModa"/>
                    <View
                        android:id="@+id/dividerModa"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textViewModa"
                        android:background="@color/ayarlarGrisi" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayoutTarih"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutModa"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textViewTarih"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/tarihText"/>
                    <Switch
                        android:id="@+id/switchTarih"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
                        android:theme="@style/SCBSwitch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textViewTarih"/>
                    <View
                        android:id="@+id/dividerTarih"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textViewTarih"
                        android:background="@color/ayarlarGrisi" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayoutEgitim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutTarih"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textViewEgitim"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/egitimText"/>
                    <Switch
                        android:id="@+id/switchEgitim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
                        android:theme="@style/SCBSwitch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textViewEgitim"/>
                    <View
                        android:id="@+id/dividerEgitim"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textViewEgitim"
                        android:background="@color/ayarlarGrisi" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayoutMuzik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutEgitim"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textViewMuzik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/muzikText"/>
                    <Switch
                        android:id="@+id/switchMuzik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
                        android:theme="@style/SCBSwitch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textViewMuzik"/>
                    <View
                        android:id="@+id/dividerMuzik"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textViewMuzik"
                        android:background="@color/ayarlarGrisi" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayoutSaglik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutMuzik"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textViewSaglik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/saglikText"/>
                    <Switch
                        android:id="@+id/switchSaglik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
                        android:layout_marginEnd="10dp"
                        android:theme="@style/SCBSwitch"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/textViewSaglik"/>
                    <View
                        android:id="@+id/dividerSaglik"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/textViewSaglik"
                        android:background="@color/ayarlarGrisi" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/relativeLayoutOyun"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayoutSaglik"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:id="@+id/textViewOyun"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="120dp"
                        android:layout_marginBottom="30dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/renkSiyah"
                        android:textAppearance="@style/customfontstyle"
                        android:textSize="@dimen/anlikBildirTextTitleSize"
                        android:text="@string/oyunText"/>
                    <Switch
                        android:id="@+id/switchOyun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="-70dp"
