<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/aramaSorularIcerikLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/aramaKullaniciResmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.103">

                <ImageView
                    android:id="@+id/aramaRoundedKullaniciResmi"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rumeli" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/aramaKullaniciAdSoyad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/aramaKullaniciResmi"
                android:text="Gökhan AKBABA"
                android:textAppearance="@style/customfontstyle"
                android:textSize="18sp"
                 />

            <TextView
                android:id="@+id/aramaSoruPaylasmaZamani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textAppearance="@style/customfontstyle"
                android:text="1sa"
                android:textSize="11sp"
                android:layout_below="@+id/aramaKullaniciAdiTxt"
                android:layout_toRightOf="@+id/aramaKullaniciResmi" />

            <TextView
                android:id="@+id/aramaSoruEtiket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:textAppearance="@style/customfontstyle"
                android:text="#Adres #Tatil"
                android:textSize="14sp"
                android:layout_below="@+id/aramaSoruPaylasmaZamani" />

            <TextView
                android:id="@+id/aramaKullaniciAdiTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textAppearance="@style/customfontstyle"
                android:layout_below="@+id/aramaKullaniciAdSoyad"
                android:layout_toRightOf="@+id/aramaKullaniciResmi"
                android:text="\@GokhanAkbaba"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/aramaSoruAlanı"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/aramaSoruEtiket"
                android:textAppearance="@style/customfontstyle"
                android:text="@string/denemeSoru1Txt"
                android:textColor="#000"
                android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/aramaSoruAlanı">

            <ImageView
                android:id="@+id/aramaSoruYorumIcon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_comment_svg" />

            <TextView
                android:id="@+id/aramaYorumSayisiTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/aramaSoruYorumIcon"
                android:text="155"
                android:textAppearance="@style/customfontstyle"
                android:textSize="17sp" />
        </RelativeLayout>
        <View
            android:id="@+id/divider3"
            android:layout_width="453dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/relativeLayout"
            android:background="@color/ayarlarGrisi" />
    </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>