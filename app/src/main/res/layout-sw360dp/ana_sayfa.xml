<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/anaSayfaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:ignore="MissingDefaultResource">

    <HorizontalScrollView
        android:id="@+id/anasayfa_horizontalview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="7dp"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anasayfa_baslik_tv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/anasayfa_alisveris_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/baslarkenilbuton"
                android:scaleType="center"
                android:src="@mipmap/alisveris_icon"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/anasayfa_yemek_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/baslarkenilbuton"
                android:scaleType="center"
                android:src="@mipmap/yemek_icon"
                app:layout_constraintLeft_toRightOf="@+id/anasayfa_alisveris_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/anasayfa_tatil_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/baslarkenilbuton"
                android:scaleType="center"
                android:src="@mipmap/tatil_icon"
                app:layout_constraintLeft_toRightOf="@+id/anasayfa_yemek_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/anasayfa_adres_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/baslarkenilbuton"
                android:scaleType="center"
                android:src="@mipmap/ic_launcher_adres"
                app:layout_constraintLeft_toRightOf="@+id/anasayfa_tatil_btn"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/anasayfa_spor_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="7dp"
                android:background="@drawable/baslarkenilbuton"
                android:scaleType="center"
                android:src="@mipmap/spor_icon"
                app:layout_constraintLeft_toRightOf="@+id/anasayfa_adres_btn"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/anasayfa_sanat_btn"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/baslarkenilbuton"
                android:scaleType="center"
                android:src="@mipmap/film_icon"
                app:layout_constraintLeft_toRightOf="@+id/anasayfa_spor_btn"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/anasayfa_soru_gonder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/baslarkenilbuton"
        android:drawableLeft="@mipmap/soru_gonder_icon"

        android:src="@mipmap/soru_gonder_icon"
        app:layout_constraintBottom_toBottomOf="@+id/anasayfa_baslik_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/anasayfa_baslik_tv"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/anasayfa_baslik_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="16dp"
        android:autoSizeTextType="uniform"
        android:text="@string/uygulama_adi"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/anasayfa_nav_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        app:itemTextColor="@color/nav_color"
        app:itemIconTint="@color/nav_color"
        app:itemIconSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/nav_items" />

    <View
        android:id="@+id/divider2"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="4px"
        android:background="@color/ayarlarGrisi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anasayfa_baslik_tv" />

    <FrameLayout
        android:id="@+id/anaSayfaFrameLayout"
        android:layout_width="409dp"
        android:layout_height="538dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/anasayfa_horizontalview"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>