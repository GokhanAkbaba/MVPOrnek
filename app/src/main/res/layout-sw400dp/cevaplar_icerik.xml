<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sorularIcerikLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/kullaniciResmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.103">

                <ImageView
                    android:id="@+id/profilCevapRoundedKullaniciResmi"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rumeli" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profilCevapKullaniciAdSoyad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="19dp"
                android:fontFamily="@font/jost"
                android:text="Gökhan AKBABA"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/kullaniciResmi"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profilCevapPaylasmaZamani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="1sa"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/kullaniciResmi"
                app:layout_constraintTop_toBottomOf="@+id/profilCevapKullaniciAdiTxt" />

            <TextView
                android:id="@+id/profilCevaplarimTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kullaniciResmi" />

            <TextView
                android:id="@+id/profilCevapKullaniciAdiTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/jost"
                android:text="\@GokhanAkbaba"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@+id/kullaniciResmi"
                app:layout_constraintTop_toBottomOf="@+id/profilCevapKullaniciAdSoyad" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/jost"
                android:text="@string/denemeSoru1Txt"
                android:textColor="#000"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profilCevaplarimTxt" />

            <View
                android:id="@+id/divider3"
                android:layout_width="453dp"
                android:layout_height="1dp"
                android:background="@color/ayarlarGrisi"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="184dp" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"
                android:text="sorusuna yanıt olarak"
                app:layout_constraintStart_toEndOf="@+id/profilCevaplarimTxt"
                app:layout_constraintTop_toBottomOf="@+id/kullaniciResmi" />

            <ImageView
                android:id="@+id/profilCevapImageButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="88dp"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:src="@mipmap/guven_oyu"
                android:tint="@color/ayarlarGrisi"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/yorumCevapBegeniSayisiTxt"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="@+id/profilCevapImageButton"
                app:layout_constraintStart_toStartOf="@+id/profilCevapImageButton"
                app:layout_constraintTop_toBottomOf="@+id/profilCevapImageButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>