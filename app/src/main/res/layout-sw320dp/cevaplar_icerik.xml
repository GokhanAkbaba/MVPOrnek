<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profilCevaplarIcerikLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/kullaniciResmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="6dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.103">

                <ImageView
                    android:id="@+id/profilCevapRoundedKullaniciResmi"
                    android:layout_width="@dimen/layoutProfilResmiIcerikGenislik320"
                    android:layout_height="@dimen/layoutProfilResmiIcerikYukseklik320"
                    android:background="@color/white"
                    android:scaleType="centerCrop"
                    android:src="@drawable/rumeli" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profilCevapKullaniciAdSoyad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="19dp"

                android:text="Gökhan AKBABA"
                android:textColor="#000"
                android:textSize="@dimen/layoutProfilAdSoyadTextSize320"
                app:layout_constraintStart_toEndOf="@+id/kullaniciResmi"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/profilCevapPaylasmaZamani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="1sa"
                android:textSize="@dimen/layoutProfilSoruZamanTextSize320"
                app:layout_constraintStart_toEndOf="@+id/kullaniciResmi"
                app:layout_constraintTop_toBottomOf="@+id/profilCevapKullaniciAdiTxt" />

            <TextView
                android:id="@+id/profilCevaplananKisiTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="138dp"
                android:layout_marginStart="12dp"
                android:text="uytyrtytryd"
                android:maxLength="25"
                android:textColor="@color/uygulamaMavisi"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.034"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/kullaniciResmi" />

            <TextView
                android:id="@+id/profilCevapKullaniciAdiTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"

                android:text="\@GokhanAkbaba"
                android:textSize="@dimen/layoutProfilKullaniciAdiTextSize320"
                app:layout_constraintStart_toEndOf="@+id/kullaniciResmi"
                app:layout_constraintTop_toBottomOf="@+id/profilCevapKullaniciAdSoyad" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="8dp"
                android:text="@string/denemeSoru1Txt"
                android:textColor="#000"
                android:textSize="@dimen/layoutProfilSoruTextSize320"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profilCevaplananKisiTxt"
                app:layout_constraintVertical_bias="0.135" />

            <View
                android:id="@+id/divider3"
                android:layout_width="453dp"
                android:layout_height="1dp"
                android:background="@color/ayarlarGrisi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profilCevapImageButton"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="4dp"
                android:text="sorusuna yanıt olarak"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/profilCevaplananKisiTxt"
                app:layout_constraintTop_toBottomOf="@+id/kullaniciResmi" />

            <ImageView
                android:id="@+id/profilCevapImageButton"
                android:layout_width="@dimen/layoutProfilBegenButonGenislik320"
                android:layout_height="@dimen/layoutProfilBegenButonYukseklik320"
                android:layout_marginStart="195dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:src="@mipmap/guven_oyu"
                android:tag="seçilmedi"
                android:tint="@color/ayarlarGrisi"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <TextView
                android:id="@+id/yorumCevapBegeniSayisiTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="270dp"
                android:layout_marginTop="9dp"
                android:text="15"
                android:textAlignment="viewStart"
                android:textSize="@dimen/layoutProfilYorumSayisiTextSize320"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/profilCevapImageButton"
                app:layout_constraintTop_toTopOf="@+id/profilCevapImageButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>